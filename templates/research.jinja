{% extends "base.jinja" %}
{% block content %}
{% for paper in papers %}
    <h3 id="{{ paper.id }}">
        <a href="{{ paper.url }}">
            > {{ paper.title }}
        </a>
    </h3>
    <div class="research-info">
        <div class="research-info-img">
            <a href="{{ paper.url }}">
                <img src="{{ paper.img }}" alt="alternatetext">
            </a>
        </div>
        <div class="research-info-text">
            <p>
                {{ paper.abstract }}
            </p>
        </div>
        <div class="citation-container">
            <a href="{{ paper.url }}">>> {{ paper.citation }} </a>
        </div>
    </div>
    {% if not loop.last %}
        <div class='divider'></div>
    {% endif %}
{% endfor %}
{% endblock %}